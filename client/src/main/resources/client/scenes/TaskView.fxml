<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="root" alignment="CENTER_LEFT" onDragDetected="#onDragDetected" prefWidth="276.0" spacing="5.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.TaskCtrl">
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <VBox>
      <AnchorPane HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <Label fx:id="nameLabel" text="Task Title" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
      </AnchorPane>
      <ListView fx:id="subTaskList" prefHeight="10" />
   </VBox>
   <Button alignment="TOP_LEFT" onMouseClicked="#onAddTask" text="add subtask">
   </Button>
   <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#edit">
      <graphic>
         <ImageView fitWidth="10.0" pickOnBounds="true" preserveRatio="true" smooth="false">
            <viewport>
               <Rectangle2D />
            </viewport>
            <!-- <Image url="/client/icons/edit.png"/> -->
         </ImageView>
      </graphic>
   </Button>
   <Button alignment="TOP_LEFT" layoutX="73.0" layoutY="13.0" mnemonicParsing="false" onAction="#delete">
      <graphic>
         <ImageView fitWidth="10.0" pickOnBounds="true" preserveRatio="true" smooth="false">
            <viewport>
               <Rectangle2D />
            </viewport>
            <!--- <Image url="/client/icons/trash.png"/> -->
         </ImageView>
      </graphic>
   </Button>
</HBox>
