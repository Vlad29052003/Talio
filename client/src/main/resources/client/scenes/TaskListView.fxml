<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.Image?>
<VBox fx:id="root" maxWidth="300.0" minWidth="250.0" prefWidth="300.0" styleClass="rootVbox" stylesheets="/style/ListView.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.TaskListCtrl">
   <children>
      <HBox fx:id="header" alignment="CENTER" maxHeight="80.0" minHeight="35.0" prefHeight="54.0" prefWidth="298.0" spacing="2.0" styleClass="titleBar">
         <children>
            <AnchorPane HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="title" text="Name" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <font>
                        <Font size="20.0" />
                     </font></Label>
               </children>
            </AnchorPane>
            <JFXButton alignment="CENTER" onAction="#edit" text="Edit" textAlignment="CENTER">
               <graphic>
                  <ImageView fitHeight="10.0" fitWidth="10.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="/client/icons/edit.png" />
                     </image>
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton alignment="CENTER" layoutX="194.0" layoutY="15.0" onAction="#delete" text="Delete" textAlignment="CENTER">
               <graphic>
                  <ImageView fitHeight="10.0" fitWidth="10.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="/client/icons/trash.png" />
                     </image>
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                  </ImageView>
               </graphic>
            </JFXButton>
         </children>
